{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "_version": "18.2.0",
  
    "compilerOptions": {
      "lib": ["es2018"],
      "module": "Node16",
      "target": "ES2018",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node16",
      "verbatimModuleSyntax": true,
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true,
      "outDir": "lib",
    },
  
    "include": ["src/**/*"],
  }